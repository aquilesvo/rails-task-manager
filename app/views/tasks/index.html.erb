<div class='main-ccontainer'>

  <h3>My Tasks</h3>

  <ul>
    <% @tasks.each do |task| %>
    <% if task[:completed] %>
    <%  checked = 'checked' %>
    <% else %>
    <% checked = "" %>
    <li><input id="checkBox" type="checkbox" <%= checked %> >
      <%= link_to task.title, task_path(task) %>
      - <%= link_to 'Delete', task_path(task), method: :delete  %>
      - <%= link_to 'Edit', edit_task_path(task) %>
    </li>
    <% end %>
  </ul>

<%= link_to 'Create a new task', new_task_path %>

</div>

